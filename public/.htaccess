<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite actual files (like CSS, JS, images, PHP files)
  RewriteCond %{REQUEST_FILENAME} !-f
  # Don't rewrite actual directories
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Route everything through PHP for dynamic meta tags
  RewriteRule ^(.*)$ meta-handler.php [L,QSA]
</IfModule>
